{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "rootDir": "src",
    "outDir": "dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*"],                   // << only compile source
  "exclude": ["node_modules", "dist", "prisma.config.ts", "prisma/**"] // << exclude prisma cfg
}
